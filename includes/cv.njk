---
layout: base.njk
---
<header class="page-header">
    <h1 class="cv-header page__header-row">
        <span class="cv-header__name">{{ cv.name }}</span>, <span class="cv-header__title">{{ cv.title }}</span>
    </h1>

    {% set contacts = cv.contacts %}
    {% if contacts %}
        <ul class="cv-contacts page__header-row">
            {% for contact in contacts %}
                <li class="cv-contacts__contact"><strong class="cv-contacts__name">{{ contact.name }}</strong>:
                    <a class="cv-contacts__link"
                       href="{{ contact.link }}" {% if contact.external %} target="_blank" {% endif %}>
                        {{ contact.value }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% set status = cv.status %}
    {% if status %}
        <p class="cv-status page__header-row">{{ status }}</p>
    {% endif %}
</header>
<main>
    {% set exps = cv.summary %}
    {% if exps %}
        <section>
            {% include './_cv-exp.njk' %}
        </section>
    {% endif %}

    {% set exps = cv.last_exp %}
    {% if exps %}
        <section>
            {% include './_cv-exp.njk' %}
        </section>
    {% endif %}

    {% set exps = cv.early_exp %}
    {% if exps %}
        <section class="cv-hr">
            {% if cv.early_exp_title %}
                <h2 class="cv-section-header cv-hr__header">{{ cv.early_exp_title }}</h2>
            {% endif %}
            {% include './_cv-exp.njk' %}
        </section>
    {% endif %}

    {% set exps = cv.ed_exp %}
    {% if exps %}
        <section class="cv-hr">
            {% if cv.ed_exp_title %}
                <h2 class="cv-section-header cv-hr__header">{{ cv.ed_exp_title }}</h2>
            {% endif %}
            {% include './_cv-exp.njk' %}
        </section>
    {% endif %}
</main>
