---
layout: base.njk
---
<header>
    <h1 class="cv-title">{{ cv.title }}</h1>

    {% set contacts = cv.contacts %}
    {% if contacts %}
        <ul class="cv-contacts">
            {% for contact in contacts %}
                <li class="cv-contacts__contact"><strong>{{ contact.name }}</strong>:
                    <a href="{{ contact.link }}" {% if contact.external %} target="_blank" {% endif %}>
                        {{ contact.value }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</header>
<main>

    {% set subtitle = cv.subtitle %}
    {% if subtitle %}
        <p class="cv-status">{{ subtitle }}</p>
    {% endif %}


    {% set summary = cv.summary %}
    {% if summary %}
        <article class="cv-summary">
            <ul>
                {% for content in summary %}
                    {% if content|is_string %}
                        <li>{{ content }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </article>
    {% endif %}


    {% set exps = cv.last_exp %}
    {% for exp in exps %}
        <article class="cv-work {% if exp.special %} cv-work_{{ exp.special }} {% endif %}">
            <h2 class="cv-work__header">
                {{ exp.name }}{% if exp.loc %}, {{ exp.loc }} {% endif %}
                {% if exp.site %}
                    · <a href="{{ exp.site.href }}" target="_blank">{{ exp.site.value }}</a>
                {% endif %}
            </h2>
            <h3>
                {{ exp.title }} <i>{{ exp.date.start }} — {{ exp.date.finish }}</i>
            </h3>

            {% for responsibility in exp.responsibility %}
                {% if responsibility|is_string %}
                    <p>
                        {{ responsibility }}
                    </p>
                {% elseif responsibility|is_object %}

                    {% if responsibility.group %}
                        <p class="cv-work__group-header">{{ responsibility.group }}</p>
                    {% endif %}

                    {% for content in responsibility.content %}
                        <ul>
                            {% if content|is_string %}
                                <li>{{ content }}</li>
                            {% endif %}
                        </ul>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </article>
    {% endfor %}

    <hr class="cv-hr">

    <h2 class="cv-section-header">{{ cv.early_exp_title }}</h2>
    {% set exps = cv.early_exp %}
    {% for exp in exps %}
        <article class="cv-work">
            <h2>
                {{ exp.name }}{% if exp.loc %}, {{ exp.loc }} {% endif %}
                {% if exp.site %}
                    · <a href="{{ exp.site.href }}" target="_blank">{{ exp.site.value }}</a>
                {% endif %}
            </h2>
            <h3>
                {{ exp.title }} <i>{{ exp.date.start }} — {{ exp.date.finish }}</i>
            </h3>

            {% for responsibility in exp.responsibility %}
                {% if responsibility|is_string %}
                    <p>
                        {{ responsibility }}
                    </p>
                {% elseif responsibility|is_object %}

                    {% if responsibility.group %}
                        <h4>{{ responsibility.group }}</h4>
                    {% endif %}

                    {% for content in responsibility.content %}
                        <ul>
                            {% if content|is_string %}
                                <li>{{ content }}</li>
                            {% endif %}
                        </ul>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </article>
    {% endfor %}

    <hr class="cv-hr">

    <h2 class="cv-section-header">{{ cv.ed_exp_title }}</h2>
    {% set exps = cv.ed_exp %}
    {% for exp in exps %}
        <article class="cv-work">
            <h2>
                {{ exp.name }}{% if exp.loc %}, {{ exp.loc }} {% endif %}
                {% if exp.site %}
                    · <a href="{{ exp.site.href }}" target="_blank">{{ exp.site.value }}</a>
                {% endif %}
            </h2>
            <h3>
                {{ exp.title }}{% if exp.date %}  <i>{{ exp.date.start }} — {{ exp.date.finish }}</i>{% endif %}
            </h3>

            {% for responsibility in exp.responsibility %}
                {% if responsibility|is_string %}
                    <p>
                        {{ responsibility }}
                    </p>
                {% elseif responsibility|is_object %}

                    {% if responsibility.group %}
                        <h4>{{ responsibility.group }}</h4>
                    {% endif %}

                    {% for content in responsibility.content %}
                        <ul>
                            {% if content|is_string %}
                                <li>{{ content }}</li>
                            {% endif %}
                        </ul>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </article>
    {% endfor %}
</main>
